<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ListView
        android:id="@+id/listview_top_ratings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fbuttonwhiet"
        />

    <ProgressBar
        android:id="@+id/progressBar_top_rating"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/progress"

        />


    <ImageView
        android:id="@+id/btn_top_ratings_refresh"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:src="@drawable/refresh"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/btn_top_ratings_no_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="لا يوجد اتصال بالانترنت"
        android:textColor="@color/colorHint"
        android:textSize="20dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_top_ratings_no_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="لا يوجد نتائج"
        android:textColor="@color/colorHint"
        android:textSize="20dp"
        android:visibility="gone"/>

</FrameLayout>
