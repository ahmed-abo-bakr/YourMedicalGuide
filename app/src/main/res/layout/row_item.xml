<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/search_row_item_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/doctor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/search_row_item_img"
        android:orientation="vertical"
        android:padding="10dp"
        >



        <TextView
            android:id="@+id/search_row_item_txtview_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Place Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/search_row_item_txtview_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:lines="2"
            android:longClickable="false"
            android:text="Description"
            android:textSize="12sp"
            />


        <RatingBar
            android:id="@+id/search_row_item_RatingBar"
            style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"

            />


    </LinearLayout>


</RelativeLayout>